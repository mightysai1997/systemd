# do not edit this file, it will be overwritten on update

ACTION=="remove", GOTO="id_input_end"

SUBSYSTEM=="input", ENV{ID_INPUT}=="", IMPORT{builtin}="input_id"
SUBSYSTEM=="input", IMPORT{builtin}="hwdb --subsystem=input --lookup-prefix=id-input:modalias:"
SUBSYSTEM=="input", ENV{ID_INPUT_JOYSTICK}=="1", ENV{ID_GAME_CONTROLLER}="1"

# Match HID devices (both evdev and hidraw) against 60-hid.hwdb
# Match syntax: hid:bXXXXgYYYYvZZZZZZZZpWWWWWWWW
SUBSYSTEM=="input|hidraw", SUBSYSTEMS=="hid", IMPORT{builtin}="hwdb --subsystem=hid"

LABEL="id_input_end"
